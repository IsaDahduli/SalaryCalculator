<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Method2Activity"
        android:orientation="vertical"
        android:background="#050505">

    <TextView
            android:text="Enter Base Salary(Monthly): "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textColor="#ffffff"/>

    <EditText
            android:id="@+id/edit_text_base_salary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:maxLines="1"
            android:singleLine="true"
            android:inputType="numberDecimal"/>

    <TextView
            android:text="Enter Housing Benefits : "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textColor="#ffffff"/>

    <EditText
            android:id="@+id/edit_text_housing_benefit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:maxLines="1"
            android:singleLine="true"
            android:inputType="numberDecimal"/>

    <TextView
            android:text="Enter Transportation Benefits : "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textColor="#ffffff"/>

    <EditText
            android:id="@+id/edit_text_transportation_benefit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:maxLines="1"
            android:singleLine="true"
            android:inputType="numberDecimal"/>

    <TextView
            android:text="Enter Health Benefits : "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textColor="#ffffff"/>

    <EditText
            android:id="@+id/edit_text_health_benefit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:maxLines="1"
            android:singleLine="true"
            android:inputType="numberDecimal"/>

    <TextView
            android:text="Enter Vacation Benefits : "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textColor="#ffffff"/>

    <EditText
            android:id="@+id/edit_text_vacation_benefit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:maxLines="1"
            android:singleLine="true"
            android:inputType="numberDecimal"/>

    <TextView
            android:text="Total Salary: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textColor="#ffffff"/>

    <EditText
            android:id="@+id/edit_text_total_salary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:maxLines="1"
            android:singleLine="true"
            android:inputType="numberDecimal"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

    <Button
            android:id="@+id/button_calculate_total_salary_before_tax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculate"
            android:padding="20dp"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:background="#0048ff"/>

    <TextView
            android:text="Enter Tax Rate % : "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textColor="#ffffff"/>

    <EditText
            android:id="@+id/edit_text_tax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:maxLines="1"
            android:singleLine="true"
            android:inputType="numberDecimal"/>

    <TextView
            android:text="Enter House Rent amount(Monthly): "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textColor="#ffffff"/>

    <EditText
            android:id="@+id/edit_text_house_rent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:maxLines="1"
            android:singleLine="true"
            android:inputType="numberDecimal"/>

    <TextView
            android:text="Salary after rent and tax: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textColor="#ffffff"/>

    <EditText
            android:id="@+id/edit_text_salary_after_rent_and_tax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:maxLines="1"
            android:singleLine="true"
            android:inputType="numberDecimal"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

</LinearLayout>

</ScrollView>